<% unless comment.archived? %>
  <li>
    <span>
      <strong>@<%= comment.commenter %>:</strong>
      <%= comment.body %>
      <%= link_to 'Destroy', [comment.article, comment], data: {
        turbo_method: :delete,
        turbo_confirm: 'Are you sure?'
      } %>
    </span>
  </li>
<% end %>
