<p class="text-center text-gray-500"><%= @article.created_at %></p>
<h1 class="title">
  <%= @article.title %>
</h1>
<div class="links-box">
  <% if @article.user == current_user %>
    <%= link_to 'Edit', edit_article_path(@article) %>
  <% end %>
</div>
<p class="body mt-4">
  <%= @article.content %>
</p>
<h2 class="section mt-4">Comments</h2>
<%= render 'comments/form', article: @article %>
<div class="mt-4 mb-10 flex flex-col gap-y-2">
  <%= render @article.comments %>
</div>
