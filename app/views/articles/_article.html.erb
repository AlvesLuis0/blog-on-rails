<div class="overflow-hidden rounded-lg shadow-lg cursor-pointer h-90">
  <%= link_to article, class: 'block w-full h-full no-underline' do %>
    <div class="w-full p-4 bg-white">
      <p class="mb-2 text-xl font-medium text-gray-800">
        <%= article.title %>
      </p>
      <p class="font-light text-gray-400 text-md truncate">
        <%= article.content %>
      </p>
      <div class="flex items-center mt-4">
        <div class="flex flex-col justify-between ml-4 text-sm">
          <p class="text-gray-400">
            <%= article.created_at %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
